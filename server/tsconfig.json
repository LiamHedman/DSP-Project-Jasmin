{
    "compilerOptions": {
      "target": "ES2020",              // Node.js v20 supports modern ES features
      "module": "commonjs",            // Use CommonJS for compatibility with Node.js
      "strict": true,                  // Enforce strict typing
      "esModuleInterop": true,         // Allow default imports from CommonJS modules
      "skipLibCheck": true,            // Speed up compilation
      "outDir": "./",                  // Output compiled JS in the same directory
      "rootDir": "./",                 // Source directory
      "types": ["node"]                // Include Node.js types
    },
    "include": ["server_axios.ts"]
  }